	<element name="ovni" align="center" x="-200" y="210" z-index="2">

		<frames>
			<frame-range-file name="ovni" extension="png" begin="0" end="1" />
		</frames>

		<animations>
			<animation name="stop">
				<frame-animation from="0" />
			</animation>
			<animation name="move" cycles-between-frames="6">
				<frame-animation from="0" to="1" />
			</animation>
		</animations>

